<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one_background"/>

        <ImageView
            android:id="@+id/background_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one_background"/>

        <ImageView
            android:id="@+id/background_fade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one_background" />

        <Button
            android:id="@+id/level_btn"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            android:background="@drawable/levelone"/>

        <TextView
            android:id="@+id/score_tv"
            android:layout_width="110dp"
            android:layout_height="47dp"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/scoretv"
            android:fontFamily="@font/unkempt_bold"
            android:gravity="center"
            android:text="@string/score_str"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/home_button"
            android:layout_marginTop="14dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:background="@drawable/homebtn_one" />

        <Button
            android:id="@+id/pause_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:background="@drawable/pausebutton"/>

        <ImageView
            android:id="@+id/heart_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/heart_two"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/heart_three"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="160dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/broken_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="120dp"
            android:scaleType="fitXY"
            android:fillAfter="false"
            android:src="@drawable/brokenheart"/>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/character_walking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:src="@drawable/walking_character"/>


            <ImageView
                android:id="@+id/banana"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/banana_shape" />

            <ImageView
                android:id="@+id/gold_coin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/coin_gold_shape"/>

            <ImageView
                android:id="@+id/water"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/water_shape"/>

            <ImageView
                android:id="@+id/crow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/crow_animate"/>

            <ImageView
                android:id="@+id/snake"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/snake_shape"/>


            <ImageView
                android:id="@+id/bat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bat_animate"/>

            <ImageView
                android:id="@+id/life_potion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/lovepoition"/>




        </FrameLayout>

    </FrameLayout>



</LinearLayout>