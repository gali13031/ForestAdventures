<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback_en"
    android:layoutDirection="ltr"
    android:id="@+id/background_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/character_hello"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/character_main"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/start_btn"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:fontFamily="@font/unkempt_bold"
                android:background="@drawable/button_shape"
                android:text="@string/startBtn_str"
                android:textSize="17dp"
                android:textAllCaps="false"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/score_btn"
                android:fontFamily="@font/unkempt_bold"
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:textSize="17dp"
                android:background="@drawable/button_shape"
                android:text="@string/scoreTitle_str"
                android:textAllCaps="false"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/owl_character"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="55dp"
            android:layout_gravity="bottom"
            android:src="@drawable/owl_animate"/>

    </RelativeLayout>
</RelativeLayout>